// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  MEMBER
}

model User {
  id           String       @id @default(cuid())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  email        String       @unique
  username     String       @unique
  displayName  String
  passwordHash String
  role         UserRole     @default(MEMBER)
  isActive     Boolean      @default(true)
  lastLoginAt  DateTime?

  // Relations
  ownedTasks   Task[]       @relation("TaskOwner")
  assignedTasks TaskAssignment[]
  permissions  Permission[]
  taskLogs     TaskLog[]
  chats        Chat[]

  @@index([email])
  @@index([username])
  @@index([role])
  @@map("users")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskFrequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
  ONCE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Task {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  ownerId     String
  title       String
  description String?
  status      TaskStatus    @default(TODO)
  priority    TaskPriority  @default(MEDIUM)
  frequency   TaskFrequency?
  dueDate     DateTime?
  completedAt DateTime?
  isDeleted   Boolean       @default(false)
  deletedAt   DateTime?

  // Relations
  owner       User          @relation("TaskOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  assignments TaskAssignment[]
  permissions Permission[]
  taskLogs    TaskLog[]
  chats       Chat[]        @relation("TaskChats")

  @@index([ownerId])
  @@index([status])
  @@index([dueDate])
  @@index([createdAt])
  @@map("tasks")
}

model TaskAssignment {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  taskId     String
  userId     String
  assignedBy String?

  // Relations
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_assignments")
}

enum PermissionType {
  READ
  WRITE
  DELETE
  ADMIN
}

model Permission {
  id         String         @id @default(cuid())
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  userId     String
  taskId     String
  permission PermissionType

  // Relations
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  task       Task           @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([userId, taskId])
  @@index([userId])
  @@index([taskId])
  @@map("permissions")
}

enum TaskLogAction {
  CREATED
  UPDATED
  COMPLETED
  CANCELLED
  ASSIGNED
  UNASSIGNED
  COMMENTED
}

model TaskLog {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  taskId    String
  userId    String
  action    TaskLogAction @default(UPDATED)
  note      String?
  metadata  Json?

  // Relations
  task      Task          @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
  @@map("task_logs")
}

model Chat {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  queryKey     String
  userId       String
  taskId       String?
  quoteChatId  String?
  message      String    @db.Text
  isEdited     Boolean   @default(false)
  isDeleted    Boolean   @default(false)
  deletedAt    DateTime?

  // Relations
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  task         Task?     @relation("TaskChats", fields: [taskId], references: [id], onDelete: Cascade)
  quotedChat   Chat?     @relation("QuotedChat", fields: [quoteChatId], references: [id], onDelete: SetNull)
  quotedBy     Chat[]    @relation("QuotedChat")

  @@index([queryKey])
  @@index([userId])
  @@index([taskId])
  @@index([createdAt])
  @@map("chats")
}
