// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  MEMBER
}

model User {
  id           String       @id @default(cuid())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  email        String       @unique
  username     String       @unique
  displayName  String
  passwordHash String
  role         UserRole     @default(MEMBER)
  // If true, user must set a new password on next login (e.g., after admin reset)
  requiresPasswordReset Boolean      @default(false)
  isActive     Boolean      @default(true)
  lastLoginAt  DateTime?

  // Relations
  ownedTasks   Task[]       @relation("TaskOwner")
  assignedTasks TaskAssignment[]
  permissions  Permission[]
  taskLogs     TaskLog[]
  chats        Chat[]
  projectsCreated Project[] @relation("ProjectCreator")
  projectCollaborations ProjectCollaborator[]
  projectPermissions ProjectPermission[]
  refreshTokens RefreshToken[]

  @@index([email])
  @@index([username])
  @@index([role])
  @@map("users")
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskFrequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
  ONCE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Task {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  // When this scheduled task occurrence should start
  assignDate  DateTime?
  // When this scheduled task occurrence is due by (completion deadline)
  dueBy       DateTime?
  ownerId     String
  projectId   String?
  title       String
  description String?
  status      TaskStatus    @default(TODO)
  priority    TaskPriority  @default(MEDIUM)
  frequency   TaskFrequency?
  dueDate     DateTime?
  completedAt DateTime?
  isDeleted   Boolean       @default(false)
  deletedAt   DateTime?

  // Relations
  owner       User          @relation("TaskOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  projectLink Project?      @relation("ProjectTasks", fields: [projectId], references: [id], onDelete: SetNull)
  assignments TaskAssignment[]
  permissions Permission[]
  taskLogs    TaskLog[]
  chats       Chat[]        @relation("TaskChats")
  parentRelations TaskRelation[] @relation("ParentTasks")
  childRelations  TaskRelation[] @relation("ChildTasks")

  @@index([ownerId])
  @@index([projectId])
  @@index([status])
  @@index([dueDate])
  @@index([assignDate])
  @@index([dueBy])
  @@index([createdAt])
  @@map("tasks")
}

model TaskAssignment {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  taskId     String
  userId     String
  assignedBy String?

  // Relations
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_assignments")
}

enum PermissionType {
  READ
  WRITE
  DELETE
  ADMIN
}

model Permission {
  id         String         @id @default(cuid())
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  userId     String
  taskId     String
  permission PermissionType

  // Relations
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  task       Task           @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([userId, taskId])
  @@index([userId])
  @@index([taskId])
  @@map("permissions")
}

model Project {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  creatorId   String
  projectName String
  description String?       @db.VarChar(2000)
  archived    Boolean       @default(false)

  // Relations
  creator     User          @relation("ProjectCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  tasks       Task[]        @relation("ProjectTasks")
  collaborators ProjectCollaborator[]
  permissions ProjectPermission[]

  @@index([creatorId])
  @@index([archived])
  @@index([createdAt])
  @@map("projects")
}

model ProjectCollaborator {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  addedAt   DateTime @default(now())

  // Relations
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@map("project_collaborators")
}

model ProjectPermission {
  id         String         @id @default(cuid())
  projectId  String
  userId     String
  permission PermissionType

  // Relations
  project    Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@map("project_permissions")
}

enum TaskLogAction {
  CREATED
  UPDATED
  COMPLETED
  CANCELLED
  ASSIGNED
  UNASSIGNED
  COMMENTED
}

model TaskLog {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  taskId    String
  userId    String
  action    TaskLogAction @default(UPDATED)
  note      String?
  metadata  Json?

  // Relations
  task      Task          @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
  @@map("task_logs")
}

model TaskRelation {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  parentTaskId    String
  childTaskId     String
  isBlock         Boolean  @default(false)

  parentTask      Task     @relation("ParentTasks", fields: [parentTaskId], references: [id], onDelete: Cascade)
  childTask       Task     @relation("ChildTasks", fields: [childTaskId], references: [id], onDelete: Cascade)

  @@unique([parentTaskId, childTaskId])
  @@index([parentTaskId])
  @@index([childTaskId])
}

model Chat {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  queryKey     String
  userId       String
  taskId       String?
  quoteChatId  String?
  message      String    @db.Text
  isEdited     Boolean   @default(false)
  isDeleted    Boolean   @default(false)
  deletedAt    DateTime?

  // Relations
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  task         Task?     @relation("TaskChats", fields: [taskId], references: [id], onDelete: Cascade)
  quotedChat   Chat?     @relation("QuotedChat", fields: [quoteChatId], references: [id], onDelete: SetNull)
  quotedBy     Chat[]    @relation("QuotedChat")

  @@index([queryKey])
  @@index([userId])
  @@index([taskId])
  @@index([createdAt])
  @@map("chats")
}
